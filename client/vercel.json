{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://hospital-inventory-management.onrender.com ws://hospital-inventory-management.onrender.com wss://hospital-inventory-management.onrender.com"
                }
            ]
        }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "build",
    "framework": "create-react-app"
}